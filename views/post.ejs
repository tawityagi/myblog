<%- include("partials/header") -%>
<br>
<h1 class="big-heading"> <%= title %> </h1>
<br>
<div id="output">
    <%- content %> 
</div> 

<div class="form-group">
<%  if(nextPost){ %> 
    <ul class="pager">
        <%  if(prevPost){ %> 
        <li><a href="/posts/<%=prevPost._id%>">Previous</a></li>
        <% } %> 
        <li><a href="/posts/<%=nextPost._id%>">Next</a></li>
    </ul>
<% } else if (prevPost ) { %>
    <ul class="pager">
        <li><a href="/posts/<%=prevPost._id%>">Previous</a></li>
    </ul>
<% } %> 
</div>
<%- include("partials/footer") -%>